<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LoginsandRegisterDesignXML" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="TitulosActionBar" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">23sp</item>
        <item name="android:fontFamily">@font/muli_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditTextyTextViews" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Sub_Titulos" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">23sp</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Sub_Sub_Titulos" parent="TextAppearance.AppCompat.Light.SearchResult.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textColor">@color/gray_deep</item>
    </style>


    <style name="BotonesTexto" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/muli</item>
    </style>

    <style name="TextoOlvidasteyRegistro" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/muli</item>
    </style>

    <style name="EditTextGeneral" parent="android:Widget.Holo.Light.EditText">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:fontFamily">@font/cairo_light</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

</resources>